generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // A URL é gerenciada pelo prisma.config.ts
}

enum Role {
  FREELANCER
  CLIENT
}

enum ProjectStatus {
  PLANNING
  IN_PROGRESS
  COMPLETED
}

enum InvoiceStatus {
  PENDING
  PAID
  CANCELLED
  OVERDUE
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  role          Role      @default(FREELANCER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  clients       Client[]
}

model Client {
  id        String    @id @default(cuid())
  name      String
  email     String?
  phone     String?
  company   String?
  document  String?
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  projects  Project[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([userId])
}

model Project {
  id          String        @id @default(cuid())
  name        String
  description String?
  value       Float         @default(0)
  status      ProjectStatus @default(PLANNING)
  
  clientId    String
  client      Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  // Relação: Um projeto pode ter várias faturas (ex: entrada + entrega)
  invoices    Invoice[]
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([clientId])
}

model Invoice {
  id              String        @id @default(cuid())
  invoiceNumber   String        @unique // Ex: INV-001
  status          InvoiceStatus @default(PENDING)
  totalAmount     Float
  dueDate         DateTime
  issuedAt        DateTime      @default(now())
  notes           String?
  
  stripeInvoiceId String?       @unique
  stripePaymentUrl String?      

  projectId       String
  project         Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([projectId])
}
