generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // A URL é omitida aqui pois é gerenciada pelo prisma.config.ts
}

enum Role {
  FREELANCER
  CLIENT
}

enum ProjectStatus {
  PLANNING
  IN_PROGRESS
  COMPLETED
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  role          Role      @default(FREELANCER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  clients       Client[]
}

model Client {
  id        String    @id @default(cuid())
  name      String
  email     String?
  phone     String?
  company   String?
  document  String?
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  projects  Project[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([userId])
}

model Project {
  id          String        @id @default(cuid())
  name        String
  description String?
  value       Float         @default(0)
  status      ProjectStatus @default(PLANNING)
  
  clientId    String
  client      Client        @relation(fields: [clientId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([clientId])
}